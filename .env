# Django environment variables
# Rename values and replace placeholders before using in production.

# SECURITY: keep this secret and NEVER commit to git
SECRET_KEY=django-insecure-REPLACE_ME

# Turn off in production
DEBUG=False

# Comma-separated hosts allowed (used by some setups)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database: default is sqlite (local dev). For Postgres, replace with a DATABASE_URL
# Example Postgres DATABASE_URL: postgres://user:password@host:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Alternatively, individual Postgres vars (optional)
# POSTGRES_DB=kps
# POSTGRES_USER=kpsuser
# POSTGRES_PASSWORD=supersecretpassword
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# Redis (channels, cache, Celery broker)
REDIS_URL=redis://localhost:6379/0

# Email (replace with your SMTP provider credentials)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=webmaster@example.com

# JWT / auth
SIMPLE_JWT_SECRET=replace_with_jwt_secret

# Optional: any 3rd-party API keys
# SENTRY_DSN=
# STRIPE_SECRET_KEY=
